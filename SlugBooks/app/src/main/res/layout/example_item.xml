<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_grey_border_bottom"
    android:padding="10dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/bookPictureId"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/bookNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookPictureId"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-4dp"
        android:layout_toEndOf="@+id/bookPictureId"
        android:layout_toRightOf="@+id/bookPictureId"
        android:text="bookName"
        android:textColor="@color/colorAccent"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookPictureId"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/bookPictureId"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:text="Book Author"
        android:textColor="@color/gray" />


    <TextView
        android:id="@+id/bookClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bookPictureId"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/bookPictureId"
        android:maxLines="2"
        android:paddingTop="5dp"
        android:text="Class"
        android:textColor="@color/gray" />


</RelativeLayout>